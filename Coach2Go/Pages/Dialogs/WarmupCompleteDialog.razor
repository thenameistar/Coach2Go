@using MudBlazor
@inject IDialogService DialogService

<MudPaper Class="pa-6" Style="background: linear-gradient(to right, #a24bdc, #c994f8); border-radius: 20px; text-align: center;">
    <MudText Typo="Typo.h5" Class="mb-2"> Warm-Up Complete!</MudText>
    <MudText Typo="Typo.subtitle1" Class="mb-4">You’re all set for today’s workout.</MudText>

    <MudText Typo="Typo.h6">Time Elapsed: @ElapsedTime</MudText>
    <MudText Typo="Typo.subtitle2" Class="mt-2"> Great job staying active!</MudText>

    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mt-6 rounded-pill" OnClick="CloseDialog">
        Finish
    </MudButton>
</MudPaper>

@code {
    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string ElapsedTime { get; set; } = "";

    private void CloseDialog()
    {
        MudDialog.Close();
    }
}